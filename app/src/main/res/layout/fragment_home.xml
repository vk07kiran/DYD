<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circular_grey_bordersolid"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/topbg"
        android:orientation="horizontal">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/courses_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Your Vehicles"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"/>


        <!-- Image at the Top -->
        <ImageView
            android:id="@+id/top_image"
            android:layout_width="327dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/applogo"
            android:background="@drawable/rounded_corner_background"/>

    </LinearLayout>

    <!-- Circular Buttons for Start Study and Start Review -->
    <LinearLayout
        android:id="@+id/circular_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_below="@id/top_section"
        android:layout_marginTop="-57dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mybookings"
                android:layout_width="83dp"
                android:layout_height="82dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/circular_background"
                android:backgroundTint="@color/white"
                android:src="@drawable/ticksss" />

            <TextView
                android:id="@+id/start_study_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="My bookings"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:id="@+id/courses_scroll_view2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Course Item 1 -->
            <RelativeLayout
                android:id="@+id/ChooseBycycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/bycycle_image"
                    android:layout_width="69dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/bycycle" />

                <TextView
                    android:id="@+id/book_bycycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Bycycles"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/bycycle_image"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/vocabulary_ii_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book for the wide range of Bycycles that are available to book right now."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/bycycle_image"
                    android:layout_marginStart="16dp"
                    android:layout_below="@id/book_bycycles"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>

            <!-- Course Item 2 -->
            <RelativeLayout
                android:id="@+id/ChooseBikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/bikeimage"
                    android:layout_width="69dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/bike" />

                <TextView
                    android:id="@+id/book_bikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Bikes"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/bikeimage"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/vocabulary_iii_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book for the wide range of Bikes that are available to book right now."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/bikeimage"
                    android:layout_marginStart="16dp"
                    android:layout_below="@id/book_bikes"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>

            <!-- Course Item 3 -->
            <RelativeLayout
                android:id="@+id/ChooseCars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/carImage"
                    android:layout_width="69dp"
                    android:layout_height="66dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/book_cars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Cars"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/carImage"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/job_search_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book for the wide range of Cars that are available to book right now."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/carImage"
                    android:layout_marginStart="16dp"
                    android:layout_below="@id/book_cars"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
